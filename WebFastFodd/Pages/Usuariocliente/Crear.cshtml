@page
@model WebFastFodd.Pages.Home.CrearModel
@{
    ViewData["Title"] = "Registro Usuario";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

<style>
    .form-control:focus {
        color: #495057;
        background-color: #fff;
        border-color: #df3131;
        outline: 0;
        box-shadow: 0 0 0 0.2rem rgb(251, 200, 200);
    }
</style>
<div class="containtop" style="padding-top: 120px;">

</div>

<div class="container" style="min-height: 500px;">
    <div class="starter-template" style="box-shadow: 1px 1px 5px 0px rgba(0, 0, 0, 0.5);
        background: #ffffff;
        border: 1px solid #c2c2c2; padding:10px">
        <div id="feedback"></div>

        <form class="form-horizontal" id="search-form" method="post">
            <div class="row form-group">
                <div class="col-6">
                    <strong style="text-align:center"> INFORMACION DE CLIENTE</strong>
                </div>
            </div>
            <div class="row form-group">
                <div class="col">
                    <input type="text" class="form-control" id="Nombres" placeholder="Nombres" asp-for="cliente.Nombres" />
                </div>
                <div class="col">
                    <input type="text" class="form-control" id="Apellidos" placeholder="Apellidos" asp-for="cliente.Apellidos" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col">
                    <select id="TipoDocId" class="form-control" asp-for="cliente.TipoDocId">
                        <option>Tipo Documento</option>
                        <option value="1">DNI</option>
                        <option value="2">Carnet de Extranjeria</option>
                    </select>
                </div>
                <div class="col">
                    <input type="text" class="form-control" id="NumeroDocumento" placeholder="Número Documento" asp-for="cliente.DocId" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col">
                    <input type="text" class="form-control" id="Numerocelular" placeholder="Número Celular" asp-for="cliente.Numerocelular" />
                </div>
                <div class="col">
                    <input type="email" class="form-control" id="Email" placeholder="Email" asp-for="cliente.Email" />
                </div>
            </div>
            <div class="row form-group">

                <div class="col">
                    <input type="password" class="form-control" id="Contrasenia" placeholder="password" asp-for="cliente.Contrasenia" />
                </div>
                <div class="col">
                    <input type="password" class="form-control" id="Contrasenia" placeholder="password" asp-for="cliente.Contrasenia" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col">
                    <input type="text" class="form-control" id="Direccion" placeholder="Direccion" asp-for="cliente.Direccion" />
                </div>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="IndAutorizaDato" asp-for="cliente.IndAutorizaDato">
                    <label class="form-check-label" for="gridCheck">
                        Autoriza uso de datos
                    </label>
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10 text-center">
                    <button type="submit" id="bth-search"
                            class="btn btn-danger btn-sm">
                        Crear Cuenta
                    </button>
                    <button type="submit" id="bth-search"
                            class="btn btn-danger btn-sm">
                        Ya tengo una cuenta
                    </button>
                </div>
            </div>
        </form>


    </div>

</div>

